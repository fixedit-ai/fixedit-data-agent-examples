# Test path variables in script references
# Tests both ${VAR} and $VAR syntax
[[inputs.cpu]]
  percpu = false
  totalcpu = true

[[processors.starlark]]
  source = '''
def apply(metric):
    metric.tags["processed"] = "true"
    return metric

'''

# Test $VAR syntax (without curly braces)
[[processors.starlark]]
  source = '''
def apply(metric):
    metric.tags["processed"] = "true"
    return metric

'''

[[outputs.execd]]
  command = ["sh", "-c", '''
tmpfile=$(mktemp)
trap 'rm -f "$tmpfile"' EXIT
openssl base64 -d -A <<'FIXEDIT_SCRIPT_EOF' >"$tmpfile"
IyEvYmluL3NoCmVjaG8gIlByb2Nlc3NpbmcgZGF0YSIKY2F0Cgo=
FIXEDIT_SCRIPT_EOF
sh "$tmpfile" "arg1"''']

[[outputs.file]]
  files = ["stdout"]

