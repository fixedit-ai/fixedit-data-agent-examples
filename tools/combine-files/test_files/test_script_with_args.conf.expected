# Test shell script with arguments including special characters
[[inputs.cpu]]
  percpu = false
  totalcpu = true

[[outputs.execd]]
  command = ["sh", "-c", '''
tmpfile=$(mktemp)
trap 'rm -f "$tmpfile"' EXIT
openssl base64 -d -A <<'FIXEDIT_SCRIPT_EOF' >"$tmpfile"

FIXEDIT_SCRIPT_EOF
sh "$tmpfile" "value with spaces" "it's quoted" "file=\"data.txt\"" "$USER"''']

[[outputs.file]]
  files = ["stdout"]

